# Pinata IPFS Configuration
# Get these from https://app.pinata.cloud/keys
PINATA_JWT=your_pinata_jwt_token_here
# Alternative: Use API Key + Secret (if not using JWT)
# PINATA_API_KEY=your_pinata_api_key_here
# PINATA_SECRET_KEY=your_pinata_secret_key_here

# IPFS Configuration
USE_LOCAL_IPFS=false
IPFS_API_URL=http://localhost:5001/api/v0

# Note: This file should be renamed to .env.local for the agent to use it

# Phoenix Arize Configuration (if using observability)
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces
PHOENIX_SERVICE_NAME=silsilat-gold-evaluator

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_MODEL=llama3.1:8b

# Gold Evaluation Parameters (can be overridden by policy)
JEWELLERY_HAIRCUT_BPS=500
BAR_HAIRCUT_BPS=100
MAX_SAFE_LTV=0.80
MARGIN_CALL_LTV=0.85
VOL_WINDOW=30
VOL_THRESHOLD=0.05
TENURE_LIMIT_DAYS=180
PRICE_DEVIATION_THRESHOLD=5.0

# Logging
LOG_LEVEL=INFO

# Silsilat API Configuration
SILSILAT_API_BASE=http://localhost:9487
SILSILAT_API_KEY=your_jwt_token_here
INPUT_TOPIC_ID=0.0.1234567
OUTPUT_TOPIC_ID=0.0.7654321

# Encryption Configuration
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
IPFS_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here